local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/jensonhirst/Orion/main/source')))()

local Window = OrionLib:MakeWindow({Name = "Aimbot Window", HidePremium = false, SaveConfig = true, ConfigFolder = "AimbotConfig"})

local Tab = Window:MakeTab({
    Name = "Aimbot",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

local Section = Tab:AddSection({
    Name = "Settings"
})

-- Create toggle to enable/disable aimbot
local AimbotToggle = Tab:AddToggle({
    Name = "Enable Aimbot",
    Default = false,
    Callback = function(Value)
        if Value then
            -- Enable Aimbot
            -- Your aimbot logic should go here
            print("Aimbot Enabled")
        else
            -- Disable Aimbot
            print("Aimbot Disabled")
        end
    end    
})

-- FOV slider to change the aimbot's field of view
local FOVSlider = Tab:AddSlider({
    Name = "FOV Size",
    Min = 10,
    Max = 180,
    Default = 90,
    Color = Color3.fromRGB(255,255,255),
    Increment = 1,
    ValueName = "FOV",
    Callback = function(Value)
        -- Your code to update the FOV for the aimbot
        print("FOV Size: " .. Value)
    end    
})

-- Visual circle for FOV
local FOVCircleToggle = Tab:AddToggle({
    Name = "Show FOV Circle",
    Default = false,
    Callback = function(Value)
        if Value then
            -- Display the visual FOV circle
            print("Showing FOV Circle")
        else
            -- Hide the visual FOV circle
            print("Hiding FOV Circle")
        end
    end    
})

-- Create a button to reset the settings
Tab:AddButton({
    Name = "Reset Settings",
    Callback = function()
        -- Reset settings logic
        AimbotToggle:Set(false)
        FOVSlider:Set(90)
        FOVCircleToggle:Set(false)
        print("Settings Reset")
    end    
})

-- Finish initializing the interface
OrionLib:Init()
